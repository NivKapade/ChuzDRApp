<ion-header>
  <ion-navbar color="header">
    <ion-title>
      ChuzDR
    </ion-title>
  </ion-navbar>
</ion-header>

<ion-content>
    <ion-grid>
        <ion-row class="filters">
                    <ion-col class="col-with-arrow" (click)="slidePrev()" no-padding col-1>
                        <ion-icon *ngIf="showLeftButton" name="arrow-back"></ion-icon>
                    </ion-col>
                    <ion-col no-padding col-10>
                        <ion-slides pager (ionSlideDidChange)="slideChanged()" slidesPerView="1">
                            <ion-slide (click)="filterData(newstype)" *ngFor="let offertype of offertypelist">
                                <img src="{{offertype}}">
                            </ion-slide>
                        </ion-slides>
                    </ion-col>
                    <ion-col class="col-with-arrow" (click)="slideNext()" no-padding col-1>
                        <ion-icon *ngIf="showRightButton" name="arrow-forward"></ion-icon>
                    </ion-col>
                </ion-row>
        </ion-grid>
        <ion-grid class="choosedoctor2" center>
        <p class="padding0"> We Offer Diagnostics, Consultations, Procedures, Second Opinion & Surgeries at Affordable Prices in India</p>
        <ion-row>
        <ion-col col-2></ion-col>
        <ion-col col-4>
        <button color="light" ion-fab (click)='NeedSurgery()'><img src="assets/imgs/Need-Surgery-Icon.png"></button>
        <p>Need Surgery</p>
        </ion-col>
        <ion-col col-1></ion-col>
        <ion-col col-4>
        <button color="light" ion-fab (click)='NeedTests()'><img src="assets/imgs/Need-Tests-Icon.png"></button>
        <p>Need Tests</p>
        </ion-col>
        <ion-col col-1></ion-col>
        </ion-row>
        <ion-row>
        <ion-col col-2></ion-col>
        <ion-col col-4>
        <button color="light" ion-fab (click)='NeedMedicalRecords()'><img src="assets/imgs/Medical-Record-Icon.png"></button>
        <p>Medical Records</p>
        </ion-col>
        <ion-col col-1></ion-col>
        <ion-col col-4>
        <button color="light" ion-fab (click)='NeedOffers()'><img src="assets/imgs/Offers-Icon.png"></button>
        <p>Offers</p>
        </ion-col>
        <ion-col col-1></ion-col>
        </ion-row>
        </ion-grid>
</ion-content>