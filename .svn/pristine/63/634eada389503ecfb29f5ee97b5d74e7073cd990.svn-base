page-home {
    .filters {
        
                ion-col {
                    text-align: center;
                    font-size: 1.6rem;
                    line-height: 1.6rem;
        
        
                    &.col-with-arrow {
                        display: flex;
                        justify-content: center;
                        align-items: center;
                    }
                }
        
                p {
                    margin: 0;
                    font-size: 1.6rem;
                    line-height: 1.6rem;
                }
            }
            .smalltoolbar{
                &.toolbar-md{
                min-height: 45px;
                }
                &.toolbar-ios{
                min-height: 45px;
                }
                background-color:#f4f4f4
                }
        
            
            .slidezoom{
                font-family: 'Segoe UI';
                font-size: 16px,regular;
                color: #333333;
            }
            .toolbar-title{
                font-family: 'Segoe UI';
                font-size: 20px;
                font-weight: 600;
            }
            .post{
               
                ion-thumbnail{
                    img{
                        width: 100%;
                        height: 100%;
                    }
                }
                h2{
                    font-family: 'Segoe UI';
                    font-size: 16px;
                    font-weight: 600; 
                    color: #333333;
                }
                p.date{
                    font-family: 'Segoe UI';
                    font-size: 14px;
                    font-weight: 200; 
                    color: #656565;
                }
                p.detail{
                    font-family: 'Segoe UI';
                    padding-top: 2px;
                    font-size: 15px;
                    font-weight: 200; 
                    color:#333333;
                }
            }
            .bodycolor{
                background-color: #f4f4f4;
            }
}
